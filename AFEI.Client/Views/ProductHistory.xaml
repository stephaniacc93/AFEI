<controls1:MetroContentControl x:Class="AFEI.Client.Views.ProductHistory"
                               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                               xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                               xmlns:controls1="http://metro.mahapps.com/winfx/xaml/controls"
                               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                               xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
                               Width="Auto"
                               Height="Auto"
                               d:DesignHeight="569"
                               d:DesignWidth="1094"
                               mc:Ignorable="d">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height=".5*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Margin="15,15,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontFamily="Segoe UI Light"
                   FontSize="20"
                   Text="Historial de Productos" />
        <StackPanel Grid.Row="0"
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
            <Button x:Name="ExportToExcelButton"
                    Width="150"
                    Height="30"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Right"
                    Background="DarkGreen"
                    BorderThickness="0"
                    Click="ExportToExcelButton_OnClick"
                    Content="Exportar a Excel"
                    Foreground="#f2f2f2" />
            <StackPanel Grid.Row="0"
                        Grid.Column="3"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                <Grid Width="270"
                      Height="30"
                      Background="#FF212121">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0"
                           Width="30"
                           Margin="5"
                           Source="../Images/SearchIcon.png" />
                    <xctk:WatermarkTextBox x:Name="SearchTextBox"
                                           Grid.Column="1"
                                           TextChanged="SearchTextBox_OnTextChanged"
                                           VerticalAlignment="Center"
                                           Background="Transparent"
                                           BorderThickness="0"
                                           FontSize="15"
                                           Foreground="White"
                                           Padding="5">
                        <xctk:WatermarkTextBox.Watermark>
                            <TextBlock FontSize="15"
                                       Foreground="Gray"
                                       Text="Fecha | Tipo | $ | Fecha | Empresa" />
                        </xctk:WatermarkTextBox.Watermark>
                    </xctk:WatermarkTextBox>
                </Grid>
            </StackPanel>
        </StackPanel>
        <DataGrid x:Name="ProductHistoryDataGrid"
                  Grid.Row="1"
                  Grid.RowSpan="5"
                  Grid.ColumnSpan="4"
                  ItemsSource="{Binding Histories, Mode=TwoWay}"
                  Height="450"
                  Margin="10,20,10,0"
                  VerticalAlignment="Top"
                  ColumnWidth="*"
                  HorizontalContentAlignment="Center"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeColumns="False"
                  CanUserResizeRows="False"
                  Style="{StaticResource AzureDataGrid}">
            <DataGrid.Columns>
                <DataGridTextColumn
                                    Binding="{Binding Date, StringFormat={}{0:MM/dd/yyyy}}"
                                    CanUserSort="False"
                                    ClipboardContentBinding="{x:Null}"
                                    Header="Fecha" />
                <DataGridTextColumn  
                                    Binding="{Binding TransactionType}"
                                    CanUserSort="False"
                                    ClipboardContentBinding="{x:Null}"
                                    Header="Tipo" />
                <DataGridTextColumn 
                                    Binding="{Binding Product.Name}"
                                    CanUserSort="False"
                                    ClipboardContentBinding="{x:Null}"
                                    Header="Producto" />
                <DataGridTextColumn 
                                    Binding="{Binding Provider.Company}"
                                    CanUserSort="False"
                                    ClipboardContentBinding="{x:Null}"
                                    Header="Proveedor" />
                <DataGridTextColumn 
                                    Binding="{Binding Quantity}"
                                    CanUserSort="False"
                                    ClipboardContentBinding="{x:Null}"
                                    Header="#  Productos" />
                <DataGridTextColumn 
                                    Binding="{Binding TransactionAmount, StringFormat={}{0:C}}"
                                    CanUserSort="False"
                                    ClipboardContentBinding="{x:Null}"
                                    Header="Transaccion" />
                <DataGridTextColumn 
                                    Binding="{Binding Justification}"
                                    CanUserSort="False"
                                    ClipboardContentBinding="{x:Null}"
                                    Header="Justificacion" />
                <DataGridTextColumn 
                                    Binding="{Binding User.Firstname}"
                                    CanUserSort="False"
                                    ClipboardContentBinding="{x:Null}"
                                    Header="Responsable" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</controls1:MetroContentControl>
