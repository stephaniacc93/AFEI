<controls1:MetroContentControl x:Class="AFEI.Client.Views.FormClient"
                               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                               xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                               xmlns:controls1="http://metro.mahapps.com/winfx/xaml/controls"
                               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                               xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
                               Width="Auto"
                               Height="Auto"
                               d:DesignHeight="569"
                               d:DesignWidth="1094"
                               mc:Ignorable="d">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Margin="15,15,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontFamily="Segoe UI Light"
                   FontSize="27"
                   Text="Cliente" />

        <TextBlock x:Name="Notification" Grid.Row="1"
                   Grid.ColumnSpan="2"
                   Margin="15,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontFamily="Segoe UI Light"
                   FontSize="15"
                   Foreground="DarkRed"
                   Text="" />


        <TextBlock Grid.Row="1"
                   Grid.Column="1"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Center"
                   FontFamily="Segoe UI Light"
                   FontSize="20"
                   Text="Nombre" />
        <TextBox x:Name="NameTextBox"
                 Grid.Row="1"
                 Grid.Column="2"
                 Width="200"
                 Height="40"
                 VerticalAlignment="Bottom"
                 FontFamily="Segoe UI Light"
                 FontSize="20"
                 Text="{Binding Client.FirstName,
                                Mode=TwoWay,
                                UpdateSourceTrigger=LostFocus,
                                ValidatesOnDataErrors=true,
                                NotifyOnValidationError=true}" />
        <TextBlock Grid.Row="2"
                   Grid.Column="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontFamily="Segoe UI Light"
                   FontSize="20"
                   Text="Apellido" />
        <TextBox x:Name="LastNameTextBox"
                 Grid.Row="2"
                 Grid.Column="2"
                 Width="200"
                 VerticalAlignment="Bottom"
                 Height="40"
                 FontFamily="Segoe UI Light"
                 FontSize="20"
                 Text="{Binding Client.LastName,
                                Mode=TwoWay,
                                UpdateSourceTrigger=LostFocus,
                                ValidatesOnDataErrors=true,
                                NotifyOnValidationError=true}" />
        <TextBlock Grid.Row="3"
                   Grid.Column="1"
                   HorizontalAlignment="Center"
                   FontFamily="Segoe UI Light"
                   FontSize="20"
                   VerticalAlignment="Bottom"
                   Text="Telefono" />
        <TextBox x:Name="TelefonoTextBox"
                 Grid.Row="3"
                 Grid.Column="2"
                 Width="200"
                 Height="40"
                 VerticalAlignment="Bottom"
                 FontFamily="Segoe UI Light"
                 FontSize="20"
                 Text="{Binding Client.Phone,
                                Mode=TwoWay,
                                UpdateSourceTrigger=LostFocus,
                                ValidatesOnDataErrors=true,
                                NotifyOnValidationError=true}" />
        <Button Grid.Row="5"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Width="300"
                Height="45"
                Margin="142,0,55,0"
                Background="Teal"
                Click="ButtonBase_OnClick"
                Content="Guardar Cliente"
                FontSize="18"
                Foreground="White" />
    </Grid>
</controls1:MetroContentControl>
